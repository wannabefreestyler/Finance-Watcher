<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.FinanceWatcher.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/soft_purple</item>
        <item name="colorPrimaryVariant">@color/deep_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/soft_teal</item>
        <item name="colorSecondaryVariant">@color/deep_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Text styles -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item> <!-- Цвет подсказки -->
    </style>

    <!-- Dark Theme -->
    <style name="Theme.FinanceWatcher.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/soft_purple_dark</item>
        <item name="colorPrimaryVariant">@color/deep_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/soft_teal_dark</item>
        <item name="colorSecondaryVariant">@color/deep_teal</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/soft_dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/soft_dark_gray</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Text styles -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item> <!-- Цвет подсказки -->
    </style>

    <!-- Splash Theme -->
    <style name="Theme.FinanceWatcher.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
